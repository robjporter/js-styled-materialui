{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "strict": true,
      "jsx": "react",
      "rootDir": "./src",
      "incremental": true,
      "experimentalDecorators": true,
      "lib": ["dom", "es6"],
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "noErrorTruncation": true,
      "allowJs": true
    }
}